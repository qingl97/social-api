<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amundi.social.repo.dao.mappers.FavoriteMapper">
	<resultMap type="com.amundi.social.common.model.Favorite" id="favoriteResult">
		<result property = "appId" column = "app_id" />
		<result property = "productId" column = "product_id" />
		<result property = "userId" column = "user_id" />
		<result property = "timestamp" column = "timestamp" javaType="org.joda.time.DateTime" typeHandler="com.amundi.social.repo.dao.util.JodaDateTimeTypeHandler"/>
	</resultMap>
	
	<sql id="all">
		select * from activities where type = 2
	</sql>

	<!-- Selects -->
	<select id="fetchAll" resultMap="favoriteResult">
		<include refid="all" />
	</select>

	<select id="fetchByApplication" resultMap="favoriteResult">
		<include refid="all" /> and app_id = #{appId};
	</select>
	
	<select id="fetchByProduct" resultMap="favoriteResult">
		<include refid="all" /> and app_id = #{appId} and product_id = #{productId};
	</select>
	
	<select id="fetchByUser" resultMap="favoriteResult">
		<include refid="all" /> and user_id = #{userId};
	</select>
	
	<select id="fetchByUserApplication" resultMap="favoriteResult"> 
		<include refid="all" /> and user_id = #{userId} and app_id = #{appId};
	</select>
	
	<select id="fetchByUserProduct" resultMap="favoriteResult"> 
		<include refid="all" /> and user_id = #{userId} and app_id = #{appId};
	</select>
	
	<!-- Insert -->
	<insert id="add" parameterType="string" useGeneratedKeys="true" keyProperty="id">
		insert into activities (type, app_id, product_id, user_id) values (2, #{appId}, #{productId}, #{userId});
		
		<selectKey keyProperty="id" resultType="int" order="AFTER">
			select last_insert_id() as id
		</selectKey>
	</insert>
	
	<!-- Delete -->
	<delete id="delete">
		delete from activities where type = 2 and app_id = #{appId} and product_id = #{productId} and user_id = #{userId};
	</delete>
	
	<!-- clear data -->
	<delete id="clear">
		delete from activities where type = 2 and app_id = #{appId};
	</delete>
</mapper>