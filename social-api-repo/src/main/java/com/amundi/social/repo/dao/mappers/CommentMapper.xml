<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amundi.social.repo.dao.mappers.CommentMapper">
	<resultMap type="com.amundi.social.common.model.Comment" id="commentResult">
		<result property = "appId" column = "app_id" />
		<result property = "productId" column = "product_id" />
		<result property = "userId" column = "user_id" />
		<result property = "timestamp" column = "timestamp" javaType="org.joda.time.DateTime" typeHandler="com.amundi.social.repo.dao.util.JodaDateTimeTypeHandler"/>
	</resultMap>
	
	<sql id="all">
		select * from actions where type = 4
	</sql>

	<!-- Selects -->
	<select id="fetchAll" resultMap="commentResult">
		<include refid="all" />
	</select>

	<select id="fetchByApplication" resultMap="commentResult">
		<include refid="all" /> and app_id = #{appId};
	</select>
	
	<select id="fetchByProduct" resultMap="commentResult">
		<include refid="all" /> and app_id = #{appId} and product_id = #{productId};
	</select>
	
	<select id="fetchByUser" resultMap="commentResult">
		<include refid="all" /> and user_id = #{userId};
	</select>
	
	<select id="fetchByUserApplication" resultMap="commentResult"> 
		<include refid="all" /> and user_id = #{userId} and app_id = #{appId};
	</select>
	
	<select id="fetchByUserProduct" resultMap="commentResult"> 
		<include refid="all" /> and user_id = #{userId} and app_id = #{appId};
	</select>
	
	<!-- Insert -->
	<insert id="add" parameterType="string" useGeneratedKeys="true" keyProperty="id">
		insert into actions (type, app_id, product_id, user_id) values (4, #{appId}, #{productId}, #{userId});
		
		<selectKey keyProperty="id" resultType="int" order="AFTER">
			select last_insert_id() as id
		</selectKey>
	</insert>
	
	<!-- Delete -->
	<delete id="delete">
		delete from actions where type = 4 and app_id = #{appId} and product_id = #{product_id} and user_id = #{userId};
	</delete>
</mapper>